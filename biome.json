{
    "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
    "files":{
      "ignore":[ "openapi.json"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 120,
        "lineEnding": "lf",
        "ignore": []
      },
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    }
  }